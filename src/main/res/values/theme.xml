<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  主题-->
    <style name="Base.Station" parent="Theme.Design.NoActionBar">
        <item name="android:textColor">?attr/stationTextColor</item>
        <item name="android:listChoiceBackgroundIndicator">
            @drawable/station_spinner_dropdown_selector
        </item>

        <item name="stationDialogCornerRadius">@dimen/station_dialog_default_radius</item>
        <item name="station3dBtnCornerRadius">@dimen/station_default_radius</item>
        <item name="stationPopupWindowCornerRadius">@dimen/station_default_radius</item>
        <item name="stationEditTextCornerRadius">@dimen/station_default_radius</item>
        <item name="stationSpinnerTextSize">@dimen/t1</item>
        <item name="stationCheckboxButtonSize">@dimen/station_checkbox_button_size</item>
        <item name="stationProgressBarCornerRadius">@dimen/station_progress_corner_radius</item>
    </style>

    <style name="Base.Station.Light">
        <item name="android:colorControlActivated">@color/main_focus</item>
        <item name="stationTextColor">@color/main_text_color</item>
        <item name="stationButtonTextColor">@color/station_button_text_color</item>
        <item name="stationButtonDisableTextColor">@color/station_button_disable_text_color</item>

        <item name="stationButtonDefaultColor">@color/station_button_default_color</item>
        <item name="stationButtonDisableColor">@color/station_button_disable_color</item>
        <item name="stationButtonFocusColor">@color/station_button_focus_color</item>
        <item name="stationButtonPressColor">@color/station_button_press_color</item>

        <item name="station3dButtonDisableColor">@color/station_3d_button_disable_color</item>
        <item name="station3dButtonDefaultColor">@color/station_3d_button_default_color</item>
        <item name="station3dButtonFocusStartColor">@color/station_3d_button_focus_start_color
        </item>
        <item name="station3dButtonFocusEndColor">@color/station_3d_button_focus_end_color</item>
        <item name="station3dButtonPressStartColor">@color/station_3d_button_press_start_color
        </item>
        <item name="station3dButtonPressEndColor">@color/station_3d_button_press_end_color</item>

        <item name="stationDialogColor">@color/dialog_background_color</item>
        <item name="stationPromptWindowColor">@color/prompt_window_background_color</item>

        <item name="stationEditTextDefaultColor">@color/station_edittext_default_color</item>
        <item name="stationEditTextFocusBorderColor">@color/station_edittext_focus_border_color
        </item>
        <item name="stationEditTextDisableColor">@color/station_edittext_disable_color</item>
        <item name="stationEditTextDefaultTextColor">@color/station_edittext_default_text_color
        </item>
        <item name="stationEditTextDisableTextColor">@color/station_edittext_disable_text_color
        </item>
        <item name="stationEditTextTextColorHint">@color/station_edittext_text_color_hint</item>
        <item name="stationEditTextDisableTextColorHint">
            @color/station_edittext_disable_text_color_hint
        </item>

        <item name="stationThumbColor">@color/station_thumb_color</item>
        <item name="stationThumbDisableColor">@color/station_thumb_disable_color</item>
        <item name="stationTrackDisableColor">@color/station_track_disable_color</item>
        <item name="stationTrackOffColor">@color/station_track_off_color</item>
        <item name="stationTrackOnColor">@color/station_track_on_color</item>
        <item name="stationTrackFocusBorderColor">@color/station_track_focus_border_color</item>

        <item name="stationImageSrcDefaultColor">@color/station_img_src_default_color</item>
        <item name="stationImageSrcFocusColor">@color/station_img_src_focus_color</item>
        <item name="stationImageSrcPressColor">@color/station_img_src_press_color</item>

    </style>
    <!--  直接继承StationTheme对属性进行修改即可-->
    <style name="StationTheme.Compat" parent="Base.Station.Light">
        <item name="editTextStyle">?android:attr/editTextStyle</item>
        <item name="switchStyle">?android:attr/switchStyle</item>
        <item name="spinnerStyle">?android:attr/spinnerStyle</item>
        <item name="checkboxStyle">?android:attr/checkboxStyle</item>
        <item name="imageButtonStyle">?android:attr/imageButtonStyle</item>
        <item name="dialogTheme">?android:attr/dialogTheme</item>
    </style>

    <style name="StationTheme" parent="StationTheme.Compat">
        <item name="android:buttonStyle">@style/Station.Widget.Button</item>
        <item name="android:editTextStyle">@style/Station.Widget.EditText</item>
        <item name="android:checkboxStyle">@style/Station.Widget.CheckBox</item>
        <item name="android:spinnerStyle">@style/Station.Widget.Spinner</item>
        <item name="android:switchStyle">@style/Station.Widget.Switch</item>
        <item name="android:imageButtonStyle">@style/Station.Widget.ImageButton</item>
        <item name="android:imageWellStyle">@style/Station.Widget.ImageButton</item>
        <item name="android:fontFamily">@font/alibaba_puhuiti_2</item>
        <item name="android:textSize">@dimen/t1</item>

        <item name="android:dialogTheme">@style/StationTheme.Dialog</item>
    </style>

    <style name="StationTheme.Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:buttonStyle">@style/Station.Widget.3D.Button</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>