<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--  直接继承StationTheme对属性进行修改即可-->
  <style name="StationTheme.Test" parent="StationTheme">
    <item name="station_corner_radius">20dp</item>
    <item name="station_3d_button_normal_background_start_color">#FFFFFF</item>
  </style>

  <!--  主题-->
  <style name="StationTheme" parent="BaseTheme">
    <item name="android:buttonStyle">@style/station_3d_button</item>
    <item name="android:fontFamily">@font/alibabapuhuiti_2</item>
  </style>

  <style name="BaseTheme" parent="Theme.Design.NoActionBar">
    <item name="station_corner_radius">@dimen/station_3d_button_default_radius</item>
    <item name="station_3d_button_normal_background_start_color">
      @color/station_3d_button_normal_color
    </item>
    <item name="station_3d_button_disable_background_start_color">
      @color/station_3d_button_disable_color
    </item>
    <item name="station_3d_button_focus_background_start_color">
      @color/station_3d_button_focus_start_color
    </item>
    <item name="station_3d_button_focus_background_end_color">
      @color/station_3d_button_focus_end_color
    </item>
    <item name="station_3d_button_press_background_start_color">
      @color/station_3d_button_press_start_color
    </item>
    <item name="station_3d_button_press_background_end_color">
      @color/station_3d_button_press_end_color
    </item>
  </style>


</resources>