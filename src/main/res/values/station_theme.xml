<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--  主题-->
  <style name="Base.Station" parent="Theme.Design.NoActionBar">
    <item name="android:textColor">?attr/stationTextColor</item>
  </style>

  <style name="Base.Station.Light">
    <item name="stationTextColor">@color/main_text_color</item>
    <item name="station3dButtonDisableColor">@color/station_3d_button_disable_color</item>
    <item name="station3dButtonNormalColor">@color/station_3d_button_normal_color</item>
    <item name="station3dButtonFocusStartColor">@color/station_3d_button_focus_start_color</item>
    <item name="station3dButtonFocusEndColor">@color/station_3d_button_focus_end_color</item>
    <item name="station3dButtonPressStartColor">@color/station_3d_button_press_start_color</item>
    <item name="station3dButtonPressEndColor">@color/station_3d_button_press_end_color</item>
    <item name="stationDialogColor">@color/dialog_background_color</item>
    <item name="stationPromptWindowColor">@color/prompt_window_background_color</item>
  </style>

  <style name="StationTheme" parent="Base.Station.Light">
    <item name="stationDialogCornerRadius">@dimen/dialog_background_default_radius</item>
    <item name="station3dBtnCornerRadius">@dimen/station_3d_button_default_radius</item>
    <item name="android:buttonStyle">@style/Station.Widget.3D.Button</item>
    <item name="android:fontFamily">@font/alibaba_puhuiti_2</item>
  </style>

  <!--  直接继承StationTheme对属性进行修改即可-->
  <style name="StationTheme.Test" parent="StationTheme">
    <item name="station3dBtnCornerRadius">20dp</item>
  </style>


</resources>