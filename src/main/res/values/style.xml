<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Station" />

  <style name="Station.Widget" />

  <style name="Station.Widget.3D.Button" parent="Widget.AppCompat.Button">
    <item name="android:textSize">@dimen/t1</item>
    <item name="android:minHeight">53dp</item>
    <item name="android:minWidth">195dp</item>
    <item name="android:textFontWeight">300</item>
    <item name="android:textColor">@drawable/station_button_text_color</item>
    <item name="android:background">@drawable/station_3d_button_background</item>
  </style>

  <style name="Station.Widget.Button" parent="Widget.AppCompat.Button">
    <item name="android:textSize">@dimen/t1</item>
    <item name="android:minHeight">53dp</item>
    <item name="android:minWidth">195dp</item>
    <item name="android:textFontWeight">300</item>
    <item name="android:textColor">@drawable/station_button_text_color</item>
    <item name="android:background">@drawable/station_button_background</item>
    <item name="android:backgroundTint">@drawable/station_button_background_tint</item>

  </style>

  <style name="Station.Widget.EditText" parent="Widget.AppCompat.EditText">
    <item name="android:textCursorDrawable">@drawable/station_text_cursor</item>
    <item name="android:background">@drawable/station_edittext_background</item>
    <item name="android:minHeight">60dp</item>
    <item name="android:paddingStart">28dp</item>
    <item name="android:paddingEnd">28dp</item>
    <item name="android:textColorHint">@drawable/station_edittext_text_color_hint</item>
    <item name="android:textColor">@drawable/station_edittext_text_color</item>
    <item name="android:textSize">@dimen/t1</item>
  </style>

  <style name="Station.Widget.PromptWindow" parent="StationTheme">
    <item name="android:background">@drawable/station_prompt_window_background</item>
    <item name="android:textSize">@dimen/t4</item>
    <item name="android:textFontWeight">300</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingTop">18dp</item>
    <item name="android:paddingBottom">18dp</item>
    <item name="android:paddingStart">20dp</item>
    <item name="android:paddingRight">20dp</item>
  </style>

  <style name="Station.Widget.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
    <item name="android:thumb">@drawable/station_thumb</item>
    <item name="track">@drawable/station_track</item>
    <item name="android:track">@drawable/station_track</item>
    <item name="android:background">@null</item>
    <item name="android:switchPadding">20dp</item>
    <item name="switchPadding">20dp</item>
    <item name="android:showText">false</item>

  </style>

  <style name="Station.Widget.Spinner" parent="Widget.AppCompat.Spinner">
    <item name="android:textSize">@dimen/t1</item>
    <item name="android:minHeight">53dp</item>
    <item name="android:textFontWeight">300</item>
    <item name="android:textColor">@drawable/station_button_text_color</item>
    <item name="android:background">@drawable/station_button_background</item>
    <item name="android:backgroundTint">@drawable/station_button_background_tint</item>
    <item name="android:popupBackground">@drawable/station_popup_window_background</item>
    <item name="android:gravity">center</item>

  </style>

  <style name="Station.Widget.SpinnerItem" >
    <item name="android:gravity">center</item>
    <item name="android:paddingLeft">15dp</item>
    <item name="android:paddingRight">15dp</item>
    <item name="android:drawableTint">@drawable/station_button_text_color</item>
    <item name="android:drawablePadding">8dp</item>
    <item name="android:drawableRight">@drawable/icon_dropdown</item>
  </style>

  <style name="Station.Widget.DropDownItem">
    <item name="android:textAlignment">center</item>
    <item name="android:minHeight">53dp</item>
    <item name="android:paddingLeft">15dp</item>
    <item name="android:paddingRight">15dp</item>
  </style>


</resources>